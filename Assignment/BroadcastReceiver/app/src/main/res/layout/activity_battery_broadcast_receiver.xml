<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BatteryBroadcastReceiver"
    android:paddingLeft="40dp">

    <TextView
        android:id="@+id/txtBatteryPerFromUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="256dp"
        android:text="TextView"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDisplayBatteryPerSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textStyle="bold|italic"
        android:textSize="17sp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/txtBatteryPerFromUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtBatteryPerFromUser"
        app:layout_constraintTop_toBottomOf="@+id/txtBatteryPerFromUser" />


</androidx.constraintlayout.widget.ConstraintLayout>