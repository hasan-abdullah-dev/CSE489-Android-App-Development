<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomBroadSender">

    <EditText
        android:id="@+id/edtCustomSenderName"
        android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:hint="Enter any name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBroadcastCustom"
        android:layout_width="189dp"
        android:layout_height="53dp"
        android:layout_marginTop="108dp"
        android:text="Broadcast"
        app:layout_constraintEnd_toEndOf="@+id/edtCustomSenderName"
        app:layout_constraintStart_toStartOf="@+id/edtCustomSenderName"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomSenderName" />

    <Button
        android:id="@+id/btnReceivePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Next Page"
        app:layout_constraintEnd_toEndOf="@+id/btnBroadcastCustom"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/btnBroadcastCustom"
        app:layout_constraintTop_toBottomOf="@+id/btnBroadcastCustom" />

</androidx.constraintlayout.widget.ConstraintLayout>